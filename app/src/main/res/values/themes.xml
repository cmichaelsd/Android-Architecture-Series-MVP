<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVPDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="MyCardViewStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">@dimen/dp_double</item>
        <item name="contentPaddingTop">@dimen/dp_double</item>
        <item name="contentPaddingLeft">@dimen/dp_double</item>
        <item name="contentPaddingRight">@dimen/dp_double</item>
        <item name="cardBackgroundColor">@color/backgroundLight</item>
    </style>

    <style name="Theme.MVPDemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MVPDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MVPDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>